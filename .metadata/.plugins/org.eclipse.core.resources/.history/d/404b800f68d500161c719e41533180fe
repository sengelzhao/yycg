package practice;

import java.net.InetAddress;
import java.net.UnknownHostException;

public class Touzihuibao {	
	public static void main(String[] args) throws Exception {
                 
           Touzihuibao t = new Touzihuibao();
           t.shouYi(10, 1.05,1040);
		
		
	}
	
	public void shouYi(int n,double rate,int money){
		double sum=0;
		double countall = 0;
		if(n<=10){
		for(int i=1;i<=n;i++)
		{
			sum += Math.pow(rate, i);
			
		}
		countall = sum*money;
		}
		if(n>10){
			int i ;
			for(i=1;i<=10;i++)
			{
				sum +=i*Math.pow(rate, i);
				System.out.println(sum*money);
			}
		  System.out.println(Math.pow(rate, n-10));
            countall = (sum*money)*Math.pow(rate, n-10);
		
			
		}
		
	  System.out.println(countall);
	}
	
	
}
	  
	 



