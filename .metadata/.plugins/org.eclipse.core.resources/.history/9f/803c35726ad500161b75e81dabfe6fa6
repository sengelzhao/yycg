public class Touzihuibao {	
	public static void main(String[] args) throws Exception {
                 
           Touzihuibao t = new Touzihuibao();
           t.shouYi(300, 2,1);
		
		
	}
	
	public void shouYi(int n,double rate,int money){
		long sum=0l;
		double countall = 0;
		if(n<=10){
		for(int i=1;i<=n;i++)
		{  
			sum +=(long) Math.pow(rate, i);
		
		}
		countall = sum*money;
		}
		if(n>10){
			int i ;
			for(i=1;i<=n;i++)
			{
				sum*=rate;
				System.out.println(sum);
			}
		
         
		
			
		}
		
	  System.out.println(countall);
	}
	
	
}
	  
	 



