public class arrayTesto {	
	public static void main(String[] args) throws Exception {

          
		
		
	}
	
	public double shouYi(int n,double rate,int money){
		double sum=0;
		if(n<=10){
		for(int i=1;i<=n;i++)
		{
			sum += Math.pow(rate, i);
		}
		}
		if(n>=10){
			int i ;
			for(i=1;i<=10;i++)
			{
				sum += Math.pow(rate, i);
			}
			System.out.println(i);
			
		   for(i=1;i<=n-10;i++){
			   sum = sum*rate;
		   }
			
		}
		return sum*money;
	}
	
	
}
	  
	 



